<div class="account-management">
    <h1>
        <%= title %>
    </h1>

    <% if (notice && notice.length> 0) { %>
        <div class="flash-message">
            <%= notice %>
        </div>
        <% } %>

            <% if (errors && errors.length> 0) { %>
                <ul class="error-list">
                    <% errors.forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>

                    <% if (accountData) { %>
                        <% if (accountData.account_type==="Client" ) { %>
                            <!-- Client greeting -->
                            <h2>Welcome, <%= accountData.account_firstname %>
                            </h2>
                            <p>
                                <a href="/account/update/<%= accountData.account_id %>">Update Account Information</a>
                            </p>
                            <% } else if (accountData.account_type==="Employee" || accountData.account_type==="Admin" )
                                { %>
                                <!-- Employee/Admin greeting -->
                                <h2>Welcome, <%= accountData.account_firstname %>
                                </h2>
                                <p>
                                    <a href="/account/update/<%= accountData.account_id %>">Update Account
                                        Information</a>
                                </p>
                                <h3>Inventory Management</h3>
                                <p>
                                    <a href="/inv/">Go to Inventory Management</a>
                                </p>
                                <% } %>

                                    <!-- Message options -->
                                    <h3>Messages</h3>
                                    <ul>
                                        <li><a href="/messages/inbox">Inbox</a></li>
                                        <li><a href="/messages/Compose">Send a Message</a></li>
                                    </ul>
                                    <% } %>

                                        <p>You're logged in.</p>
</div>