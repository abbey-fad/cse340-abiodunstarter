<div class="login-wrapper">
	<h1>
		<%= title %>
	</h1>
	<%- messages() %>
	
	<% if (typeof errors !=='undefined' && errors) { %>
		<ul class="notice">
			<% errors.array().forEach(error=> { %>
				<li>
					<%= error.msg %>
				</li>
				<% }) %>
		</ul>
		<% } %>

		<form id="loginForm" action="/account/login" method="post">
			<label for="email">Email:</label>
			<input type="email" id="email" name="account_email" required placeholder="Enter your email" value="<%= locals.account_email %>">

			<label for="password">Password:</label>
			<input type="password" id="password" name="account_password" required
				pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
				placeholder="Enter your password">

			<div class="password-hint">
				<i>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter, and 1
					special character.</i>
			</div>

			<button type="submit">Login</button>
		</form>

		<p class="signup-link">No account? <a href="/account/register">Sign-up</a></p>
</div>