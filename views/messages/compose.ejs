<h1>
	<%= title %>
</h1>

<% if (notice && notice.length> 0) { %>
	<div class="flash-message">
		<%= notice[0] %>
	</div>
	<% } %>

		<form action="/messages/send" method="POST" class="message-form">
			<label for="message_to">Recipient</label>
			<select id="message_to" name="message_to" required>
				<option value="">--Select Recipient--</option>
				<% recipients.forEach(account=> { %>
					<option value="<%= account.account_id %>" <%=message_to==account.account_id ? "selected" : "" %>>
						<%= account.account_firstname %>
							<%= account.account_lastname %>
					</option>
					<% }) %>
			</select>

			<label for="message_subject">Subject</label>
			<input type="text" id="message_subject" name="message_subject" required
				value="<%= message_subject || '' %>">

			<label for="message_body">Message</label>
			<textarea id="message_body" name="message_body" rows="6" required><%= message_body || '' %></textarea>

			<button type="submit">Send Message</button>
		</form>