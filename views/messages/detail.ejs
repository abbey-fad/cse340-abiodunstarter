<h1>
	<%= title %>
</h1>

<% if (notice && notice.length> 0) { %>
	<div class="flash-message">
		<%= notice[0] %>
	</div>
	<% } %>

		<% if (message) { %>
			<div class="message-meta">
				<p><strong>From:</strong>
					<%= message.from_name %>
				</p>
				<p><strong>To:</strong>
					<%= message.to_name %>
				</p>
				<p><strong>Date:</strong>
					<%= new Date(message.message_created).toLocaleString() %>
				</p>
			</div>

			<h2>
				<%= message.message_subject %>
			</h2>

			<p class="message-body">
				<%= message.message_body %>
			</p>

			<div class="message-actions">
				<form action="/messages/archive/<%= message.message_id %>" method="POST">
					<button type="submit">Archive</button>
				</form>

				<form action="/messages/delete/<%= message.message_id %>" method="POST"
					onsubmit="return confirm('Are you sure you want to delete this message?');">
					<button type="submit">Delete</button>
				</form>

				<a href="/messages/reply/<%= message.message_id %>" class="button">Reply</a>
			</div>
			<% } else { %>
				<p>Message not found or access denied.</p>
				<% } %>