<header id="top-header">
	<span class="siteName">
		<a href="/" title="Return to home page">CSE Motors</a>
	</span>
	<div id="tools">
	
	<div id="tools">
		<% if (locals.loggedin && locals.accountData) { %>
			<!-- Show when client is logged in -->
			<a href="/account/" title="Manage your account">Welcome, <%= locals.accountData.account_firstname %></a>
			<a href="/account/logout" title="Log out of your account">Logout</a>
			<% } else { %>
				<!-- Show when client is not logged in -->
				<a href="/account/login" title="Access your account">My Account</a>
				<% } %>
	</div>
</header>